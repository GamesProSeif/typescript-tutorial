{
	"compilerOptions": {
		"baseUrl": "./",
		"strict": true,
		"alwaysStrict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2017",
		"pretty": true,
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"lib": [
			"esnext",
			"esnext.array",
			"esnext.asynciterable",
			"esnext.intl",
			"esnext.symbol"
		],
		"sourceRoot": "./src",
		"outDir": "dist",
		"inlineSources": true,
		"inlineSourceMap": true
	},
	"include": [
		"./src/**/*"
	]
}